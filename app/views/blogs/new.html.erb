<h3 align="center">Create blog here</h3>
<div class="jumbotron">
<%= form_with(model: @blog,local: true) do |form| %>
	<% if @blog.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@blog.errors.count, "error") %> Error while registering blog:</h2>

		<ul>
		<% @blog.errors.full_messages.each do |msg| %>
		<li style="color:red;"><%= msg %></li>
		<% end %>
		</ul>
		</div>
	<% end %>
	<p>
	<%= form.text_field :title , placeholder:'Enter Title' ,class:"form-control" %>
	</p>
	<p>
	<%= form.text_area :body , placeholder:'Enter body',class:"form-control" %>
	</p>
	<p align="center">
	<%= form.submit 'Save' , class:"btn btn-primary btn-sm"%>
	</p>
<%end%>
</div>